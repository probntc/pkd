<% if users.errors.any? %>
  <div class="error_explanation">
    <div class="alert alert-danger">
      <%= t ".count_error"%> <%= pluralize users.errors.count, t(".error") %>.
    </div>
    <ul>
    <% users.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
